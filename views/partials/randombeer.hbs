<div id="random-beer">
    <div>
        <img src="{{this.image}}" alt="image of {{this.name}}">
    </div>
    <div>
        <p>{{this.name}}</p>
        <p>{{this.description}}</p>
        <ul>{{this.food_pairing}}
            {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{this.brewers_tips}}</p>
    </div>
</div>